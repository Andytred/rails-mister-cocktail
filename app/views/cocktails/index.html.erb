<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name of the coctails</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= link_to cocktail.name, cocktail_path(cocktail.id) %></td>
        <td><%= link_to 'Add dose', new_cocktail_dose_path(cocktail) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create new cocktail', new_cocktail_path %>
